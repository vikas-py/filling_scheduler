# .coveragerc - Coverage.py configuration file

[run]
source = src/fillscheduler
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */site-packages/*
    */venv/*
    */.venv/*
    */conftest.py

branch = True
parallel = True

[report]
# Regexes for lines to exclude from consideration
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug

    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run:
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod

    # Don't complain about ellipsis in protocols/stubs
    \.\.\.
    pass

# Show line numbers of statements that weren't executed
show_missing = True

# Target coverage percentage
fail_under = 70

# Precision for coverage percentage
precision = 2

# Skip files with 100% coverage
skip_covered = False

# Skip empty files
skip_empty = True

[html]
directory = htmlcov
title = Filling Scheduler Coverage Report

[xml]
output = coverage.xml
