# Auto detect text files and normalize line endings to LF in the repository
* text=auto eol=lf

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pyd binary
*.so binary
*.dll binary
*.dylib binary

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# Config files
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.json text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# CSV files (don't normalize, preserve as-is)
*.csv text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.zip binary
*.tar.gz binary
*.gz binary

# Archives
*.7z binary
*.jar binary
*.rar binary
*.tar binary
*.tgz binary

# Python specific
*.ipynb text eol=lf linguist-documentation
*.pickle binary
*.pkl binary
*.pyc binary
*.pyo binary

# IDE files
*.code-workspace text eol=lf
*.vscode/* text eol=lf
