# MANIFEST.in - Specify additional files to include in distribution

# Documentation
include README.md
include CHANGELOG.md
include LICENSE
include Restructuring_TODO.md
include Claude_Initial_Review.md

# Configuration files
include pyproject.toml
include pytest.ini
include requirements.txt
include requirements-dev.txt
include .gitignore

# Examples
recursive-include examples *.csv
recursive-include examples *.py
recursive-include examples *.md

# Tests (optional, include if you want tests in source distribution)
recursive-include tests *.py
recursive-include tests *.csv

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib
prune .git
prune .pytest_cache
prune output
prune *.egg-info
